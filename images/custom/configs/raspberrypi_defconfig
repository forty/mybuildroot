BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_CUSTOM_PATH)/board/common/post-image.sh"
BR2_ROOTFS_POST_SCRIPT_ARGS="$(BR2_EXTERNAL_CUSTOM_PATH)/board/raspberrypi/raspberrypi.conf"

# Bootloader (u-boot)
